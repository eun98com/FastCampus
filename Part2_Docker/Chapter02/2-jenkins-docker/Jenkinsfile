def mainDir = "~/part2/FastCampus/Part2_Docker/Chapter02/2-jenkins-docker"
def dockerHubCredentials = credentials('docker-hub-credentials')
def dockerImageName = 'eun98com/jib-test'
def dockerImageTag = "${env.BUILD_NUMBER}"

pipeline {
    agent any

    stages {
        stage('Pull Codes from Github') {
            steps {
                checkout scm
            }
        }
        stage('Build and Push to Docker Hub') {
            steps {
                dir(mainDir) {
                    script {
                        def jibArgs = [
                            to: [
                                image: "${dockerImageName}:${dockerImageTag}",
                                auth: dockerHubCredentials
                            ]
                        ]
                        sh "./gradlew clean build"
                        sh "./gradlew jib --info -Djib.console=plain -Djib.useOnlyProjectCache=false -Djib.allowInsecureRegistries=true"
                    }
                }
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: '**/build/libs/*.jar', allowEmptyArchive: true
        }
    }
}

pipeline {
    agent any

    stages {
        stage('Deploy on Server 2') {
            steps {
                script {
                    def remoteHost = '10.32.239.42'
                    def remoteUser = 'nuc'
                    def remotePort = 22
                    //def remoteDir = '/path/to/remote/directory'

                    sshCommand remote: [
                        host: remoteHost,
                        user: remoteUser,
                        port: remotePort
                    ], command: """
                    docker pull ${dockerImageName}:${dockerImageTag}
                    docker run -d -p 80:8080 -t --name:jib-test ${dockerImageName}:${dockerImageTag} 
                    """
                }
            }
        }
    }
}
